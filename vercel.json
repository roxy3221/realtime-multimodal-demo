{
  "buildCommand": "cd web-demo && npm run build",
  "outputDirectory": "web-demo/dist",
  "installCommand": "cd web-demo && npm install",
  "rewrites": [
    {
      "source": "/workers/(.*)",
      "destination": "/workers/$1"
    },
    {
      "source": "/node_modules/@mediapipe/tasks-vision/wasm/(.*)",
      "destination": "/node_modules/@mediapipe/tasks-vision/wasm/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        },
        {
          "key": "Cross-Origin-Opener-Policy", 
          "value": "same-origin"
        }
      ]
    },
    {
      "source": "/node_modules/@mediapipe/tasks-vision/wasm/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/wasm"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "cross-origin"
        }
      ]
    }
  ]
}